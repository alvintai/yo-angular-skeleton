div.container
  div.row
    div.col-2
      ul.nav.nav-pills.nav-stacked
        li.nav-header List Header
        li(ng-repeat="tab in sideTabs", ng-class="{active : $first}")
          a(href="") {{tab}}
        li.divider
    div.col-10
      ul.nav.nav-tabs
        li(ng-repeat="tab in tabs", ng-class="{active : $first}")
          a {{tab.tabTitle}}
            &nbsp; &nbsp;
            span.close-x(ng-click="closeTab($index)")
              img(src="http://placehold.it/15x15")
        li.dropdown.pull-right
          a.dropdown-toggle(data-toggle="dropdown") Dropdown
            span.caret
          ul.dropdown-menu
            li 
              a(href="#/login") Login
            li 
              a(href="#/tutorial") Tutorial
        li
          a(ng-click="addTab()") +
      div.hero-unit
        h1 'Allo, 'Allo!
        p You now have
        ul
          li(ng-repeat="thing in awesomeThings") {{thing}}
        p installed.
        h3 Enjoy coding! - Yeoman is awesome!
        a(href="/#/login") Login Here
        p
        a(href="/#/tutorial") Tutorial



